<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="12dp">

    <TextView
        android:id="@+id/tv_participant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:text="Gundeep"
        android:layout_weight="1"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/et_participant_paid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="paid"
        android:padding="4dp"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/et_participant_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="share"
        android:padding="4dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/button_remove_participant"
        android:layout_width="@dimen/default_cross_button_height"
        android:layout_height="@dimen/default_cross_button_height"
        android:padding="4dp"
        android:text="X" />

</LinearLayout>